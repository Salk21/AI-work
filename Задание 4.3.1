import random # генератор случайных чисел
import numpy as np # нужен для того, чтобы сработал генератор случайных чисел
from statistics import mean # для того, чтобы найти среднее значение
from statistics import median # для того, чтобы найти медианное значение
import matplotlib.pyplot as plt # нужен для построения графика
size = 5
x = range(0, size) # используется для графика по оси x
h = np.random.random_sample(size = size) # массив, в котором значения случайны, а также выступает в роли размера диаграммы
a = mean(h) # нахождение среднего значения
b = median(h) # нахождение медианного значения
print('Среднее значение массива : ', a)
print('Медианное значение массива : ', b)
if(a == b):
  print('Вывод : среднее значение равен медианному значению')
elif(a > b):
  print('Вывод : среднее значение больше медианного значения')
else:
  print('Вывод : среднее значение меньше медианного значения')
fig, ax = plt.subplots(figsize=(10, 6))
ax.scatter(x, h) # размер диаграммы по осям
plt.title('Точечная диаграмма сред. и мед. значений')
plt.show()
